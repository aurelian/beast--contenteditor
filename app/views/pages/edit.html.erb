<h1><%= 'Edit Page'[:edit_page] %></h1>

<% form_for :page,
     :url  => page_path(@page),
     :html => { :method => :put, :id => 'page_form' } do |f| -%>
<%= render :partial => "form", :object => f %>
<%= submit_tag 'Save Page'[:save_page], :or => link_to('Cancel'[:cancel], pages_path) %>
<% end -%>